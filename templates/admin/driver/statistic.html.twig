{% extends 'admin/base.html.twig' %}

{% block title %}Admin - Driver {{ driver.user}} statistic{% endblock %}

{% block body_title %}<h1>Driver {{ driver.user}} statistic</h1>{% endblock %}

{% block body_content %}
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ driver.id }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ driver.user.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ driver.user.lastName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ driver.user.email }}</td>
            </tr>
            <tr>
                <th>AverageRating</th>
                <td>{{ driver.averageRating }}</td>
            </tr>
            <tr>
                <th>CompletedOrders</th>
                <td>{{ driver.completeOrderCount }}</td>
            </tr>
            <tr>
                <th>UnfinishedOrders</th>
                <td>{{ driver.unfinishedOrderCount }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_driver_index') }}">Back</a>
{% endblock %}
